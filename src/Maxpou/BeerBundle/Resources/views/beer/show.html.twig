{% extends 'base.html.twig' %}

{% block body %}
    <h1>Beer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ beer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ beer.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ beer.description }}</td>
            </tr>
            <tr>
                <th>Alcohol</th>
                <td>{{ beer.alcohol }}</td>
            </tr>
            <tr>
                <th>Brewery</th>
                <td>{{ beer.brewery.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('beer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('beer_edit', { 'id': beer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
